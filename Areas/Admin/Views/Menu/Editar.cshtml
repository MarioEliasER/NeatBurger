@model NeatBurger.Areas.Admin.Models.AdminAgregarMenuViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<form method="post" action="~/Admin/Menu/Editar">
    <h1>Editar hamburguesa del menú</h1>
    <input type="hidden" asp-for="Menu.Id" />
    <span>
        <label for="nombre">Nombre:</label>
        <input type="text" id="nombre" asp-for="Menu.Nombre" required>
    </span>

    <span>
        <label for="precio">Precio:</label>
        <input type="number" id="precio" asp-for="Menu.Precio" min="0" step="0.01" required>
    </span>

    <span>
        <label for="descripcion">Descripción:</label>
        <textarea id="descripcion" asp-for="Menu.Descripción" required></textarea>
    </span>

    <span>
        <label for="clasificacion">Clasificación:</label>
        <select id="clasificacion" asp-for="Menu.IdClasificacion" asp-items="@(new SelectList(Model.Clasificaciones,"Id", "Nombre"))"  required>

        </select>
    </span>

    <span>
        <label for="imagen">Imagen:</label>
        <input type="file" id="imagen" asp-for="Archivo" accept="image/png" onchange="previewImagen()">
        <img id="imagen-preview" src="~/hamburguesas/@(Model.Menu.Id).png">
        <p id="error">@Html.ValidationSummary(true)</p>
    </span>

    <div class="botones">
        
        <input type="submit" value="Guardar" />
        <a href="~Admin/Menu/Index">
            <input type="button" value="Cancelar" />
        </a>
    </div>
</form>

<script>

    function previewImagen() {
        const inputImagen = document.getElementById('imagen');
        const imagenPreview = document.getElementById('imagen-preview');

        const archivoImagen = inputImagen.files[0];

        if (archivoImagen) {
            const lector = new FileReader();

            lector.onload = function (e) {
                imagenPreview.src = e.target.result;
                imagenPreview.style.display = 'block';
            };

            lector.readAsDataURL(archivoImagen);
        } else {
            imagenPreview.src = '#';
            imagenPreview.style.display = 'none';
        }
    }
</script>