@model NeatBurger.Areas.Admin.Models.AdminMenuViewModel
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<section class="menu2">
    @foreach (var clasif in Model.ListaClasificaciones)
    {
        <h1>@clasif.Clasificacion</h1>
        foreach (var menu in clasif.ListaHamburguesas)
        {
            <div>
                <img src="~/hamburguesas/@(menu.Id).png" />
                <h1>@menu.Nombre</h1>
                @if (menu.PrecioPromocion != null)
                {
                    <h2><del>@menu.Precio.ToString("c")</del><br />@menu.PrecioPromocion?.ToString("c")</h2>
                }
                else
                {
                    <h2>@menu.Precio.ToString("c")</h2>
                }
                <p>
                   @menu.Descripción
                </p>

                <span class="acciones">
                    <a href="~/Admin/Menu/Editar/@menu.Id">Editar</a>
                    <a href="~/Admin/Menu/Eliminar/@menu.Id">Eliminar</a>
                    @if (menu.PrecioPromocion != null)
                    {
                        <a href="~/Admin/Menu/QuitarPromocion/@menu.Id">Quitar promoción</a>
                    }
                    else
                    {
                        <a href="~/Admin/Menu/AgregarPromocion/@menu.Id">Agregar promoción</a>
                    }
                </span>
            </div>
        }
    }
    <a class="fab" href="~/Admin/Menu/Agregar">+</a>
</section>