@model NeatBurger.Areas.Admin.Models.AdminPromocionViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "AgregarPromocion";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<form method="post" action="~/Admin/Menu/AgregarPromocion">
    <h1>Agregar un descuento de promoción</h1>
    <input type="hidden" asp-for="Id" />

    <span>
        <label for="nombre">Nombre:</label>
        <input type="text" id="nombre" asp-for="Nombre" readonly required>
    </span>
    <span>
        <label for="precio">Precio real:</label>
        <input type="text" id="precio" asp-for="Precio" readonly required>
    </span>
    <span>
        <label for="promocion">Precio promoción:</label>
        <input type="text" id="promocion" asp-for="PrecioPromocion" required>
    </span>
    <span class="error">@Html.ValidationSummary(true)</span>

    <div class="botones">
        <input type="submit" value="Agregar" />
        <a href="~/Admin/Menu/Index">
            <input type="button" value="Cancelar" />
        </a>
    </div>
</form>