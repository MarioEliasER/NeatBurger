@model NeatBurger.Models.ViewModels.PromocionesViewModel
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}
<section class="menu1">
    <img src="~/hamburguesas/@(Model.Id).png" />
    <div class="datos">
        <h3>
            <del>@Model.Precio.ToString("c")</del>
            <b>@Model.PrecioPromocion?.ToString("c")</b>
        </h3>
        <h2>@Model.Nombre</h2>
        <p>@Model.Descripción.</p>
    </div>
    <span>
        <a href="~/Home/Promociones/@Model.MenuAnterior.Replace(" ", "-")">&lt;</a>
        <a href="~/Home/Promociones/@Model.MenuSiguiente.Replace(" ", "-")">&gt;</a>
    </span>
</section>